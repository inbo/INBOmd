\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerthemevlaanderenfont}

\newcommand{\choosefont}[1]{%
  \edef\custom{{#1}}%
  \expandafter\ifstrequal\custom{TRUE}{
    \setmainfont[
      Ligatures = TeX,
      ItalicFont = FlandersArtSans-Light.ttf,
      ItalicFeatures = {FakeSlant = 0.15},
      BoldFont = FlandersArtSans-Medium.ttf,
      BoldItalicFont = FlandersArtSans-Medium.ttf,
      BoldItalicFeatures = {FakeSlant = 0.15}
    ]{FlandersArtSans-Regular.ttf}
  }{
    \setmainfont[
      Ligatures = TeX
    ]{Calibri}
  }
}

% defines fonts
\RequirePackage{ifxetex}

\ifxetex
  \RequirePackage[no-math]{fontspec}
  \choosefont{\@flandersfont}
  \setmonofont[Mapping=tex-ansi]{Inconsolatazi4}
\else
  \RequirePackage[T1]{fontenc}
  \RequirePackage[utf8]{inputenc}
  \RequirePackage{inconsolata}
\fi
\usefonttheme{serif}

