     \vspace{5mm}
     \raggedright {\usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor}

     {\usebeamerfont{institute}\usebeamercolor[fg]{institute}\insertinstitute}
  \end{textblock}

  \titlelogo
}

