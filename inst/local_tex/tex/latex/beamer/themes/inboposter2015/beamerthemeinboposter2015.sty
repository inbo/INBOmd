\newcommand{\choosefont}[1]{%
  \edef\custom{{#1}}%
  \expandafter\ifstrequal\custom{TRUE}{
    \setmainfont[
      Ligatures = TeX,
      ItalicFont = FlandersArtSans-Italic,
      BoldFont = FlandersArtSans-Bold,
      BoldItalicFont = FlandersArtSans-BoldItalic,
    ]{FlandersArtSans-Regular.otf}
  }{
    \setmainfont[
      Ligatures = TeX
    ]{Calibri}
  }
}

