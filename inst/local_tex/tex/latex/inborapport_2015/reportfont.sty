\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{reportfont}

\newcommand{\choosefont}[1]{%
  \edef\custom{{#1}}%
  \expandafter\ifstrequal\custom{TRUE}{
    \setmainfont[
      Ligatures = TeX,
      ItalicFont = FlandersArtSans-Italic,
      BoldFont = FlandersArtSans-Bold,
      BoldItalicFont = FlandersArtSans-BoldItalic,
    ]{FlandersArtSans-Regular.otf}
  }{
    \setmainfont[
      Ligatures = TeX,
      ItalicFont = Calibri-Italic,
      BoldFont = Calibri-Bold,
      BoldItalicFont = Calibri-BoldItalic,
    ]{Calibri}
  }
}

% defines fonts
\RequirePackage{ifxetex}

\ifxetex
  \RequirePackage[no-math]{fontspec}
  \choosefont{\@flandersfont}
  \setmonofont[Mapping=tex-ansi]{Inconsolatazi4}
\else
  \RequirePackage[T1]{fontenc}
  \RequirePackage[utf8]{inputenc}
  \RequirePackage{inconsolata}
\fi

